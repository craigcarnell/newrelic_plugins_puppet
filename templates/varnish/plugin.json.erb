{
  "agents": [
  <%- @servers.each do |server| %>
    {
	  "type" : "varnish",
	  "name" : "<%= !server['name'].nil? ? server['name'] : server['host'] %>",
	  <% if scope.lookupvar(server['varnish_user']) != '' -%>
	  "user"    : "<%= server['varnish_user'] %>",
	  <% end -%>
	  <% if scope.lookupvar(server['varnish_passwd']) != '' -%>
	  "passwd"  : "<%= server['varnish_passwd'] %>",
	  <% end -%>
	  <% if scope.lookupvar(server['varnish_host']) != '' -%>
	  "host"    : "<%= server['host'] %>",
	  <% end -%>
	  <% if scope.lookupvar(server['varnish_instance']) != '' -%>
	  "instance" : "<%= server['host'] %>"
	  <% end -%>
	}
  <%- end %>
  ]
}

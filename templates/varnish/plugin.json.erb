{
  "agents": [
  <%- @servers.each do |server| %>
    {
	  "type" : "varnish",
	  "name" : "<%= !server['name'].nil? ? server['name'] : server['host'] %>",
	  <% if !server['varnish_user'].nil -%>
	  "user"    : "<%= server['varnish_user'] %>",
	  <% end -%>
	  <% if !server['varnish_passwd'].nil -%>
	  "passwd"  : "<%= server['varnish_passwd']" %>,
	  <% end -%>
	  <% if !server['varnish_host'].nil -%>
	  "host"    : "<%= server['host'] %>",
	  <% end -%>
	  <% if !server['varnish_instance'].nil -%>
	  "instance" : "<%= server['host'] %>"
	  <% end -%>
	}
  <%- end %>
  ]
}
